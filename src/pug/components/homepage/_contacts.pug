// SECTION :: START

section#contacts.contacts
	.c-grid
		.contacts__wrapper

			p.contacts__title Tell Us About Yourself

			p.contacts__desc You probably have a million questions - let’s talk.
			p.contacts__desc If you’d like to connect with us to learn more about our product, please use the contact form.
			p.contacts__desc If you are from the media, please reach out to pr@datacultr.com
			p.contacts__desc If you want to work with us, send us your resume at jobs@datacultr.com

			form#contactForm.contacts__form(action='' method='' autocomplete='off')
				.contacts__form-left

					.contacts__form-field.contacts__form-field--input
						label(for='form-name') Your Name
						input(type='text' name='name' id='form-name')
					.contacts__form-field.contacts__form-field--input
						label(for='form-phone') Your Phone
						input(type='tel' name='phone' id='form-phone')
					.contacts__form-field.contacts__form-field--input
						label(for='form-email') Your Email
						input(type='email' name='email' id='form-email')
					.contacts__form-field.contacts__form-field--input
						label(for='form-message') Message
						textarea(name='message' id='form-message')
					.contacts__form-field.contacts__form-field--btn
						.c-btn__wrapper
							button.c-btn(type='submit')
								span Connect

					.contacts__form-loader
						#bowlG
							#bowl_ringG
								.ball_holderG
									.ballG

					.contacts__form-message
						p Your application has been sent successfully. We will contact you for confirmation shortly.

				.contacts__form-right

// SECTION :: END
